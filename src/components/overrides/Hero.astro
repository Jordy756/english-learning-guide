---
import ChevronIcon from "@components/icons/ChevronRight.astro";

const { entry } = Astro.locals.starlightRoute;
const { title = "TalkScript", description, hero } = entry.data;
const actions = hero?.actions || [];
---

<div class="hero-container">
  <div class="hero-content">
    <h1 class="hero-title">
      {hero?.title || title}
    </h1>

    {hero?.tagline && <p class="hero-tagline">{hero.tagline}</p>}

    {
      actions.length > 0 && (
        <div class="hero-actions">
          {actions.map((action: any) => (
            <a
              href={action.link}
              class={`hero-button ${action.variant === "minimal" ? "hero-button-minimal" : "hero-button-primary"}`}
            >
              {action.text}
              <ChevronIcon class="hero-button-icon" />
            </a>
          ))}
        </div>
      )
    }
  </div>
</div>

<style>
  .hero-container {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: clamp(400px, 50vh, 600px);
    padding: clamp(2rem, 5vw, 4rem) 1.5rem;
  }

  .hero-content {
    max-width: 1544px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: clamp(1.5rem, 3vw, 2.5rem);
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--sl-color-white);
    margin: 0;
    max-width: 20ch;
  }

  .hero-tagline {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    line-height: 1.6;
    color: var(--sl-color-gray-2);
    margin: 0;
    max-width: 54ch;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    font-weight: 500;
    line-height: 1;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .hero-button-primary {
    background: var(--sl-color-text-accent);
    color: var(--sl-color-black);
    border: 2px solid transparent;
  }

  .hero-button-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .hero-button-minimal {
    background: transparent;
    color: var(--sl-color-white);
    border: 2px solid var(--sl-color-gray-5);
  }

  .hero-button-minimal:hover {
    border-color: var(--sl-color-gray-4);
    background: var(--sl-color-gray-6);
  }

  .hero-button-icon {
    transition: transform 0.2s ease;
  }

  .hero-button:hover .hero-button-icon {
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

    .hero-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
